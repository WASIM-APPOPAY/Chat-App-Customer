<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <com.stuffrs.newappopay.views.MyTextViewBoldItalic
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="You enter a phone number"
        android:textAppearance="?textAppearanceBody1"
        android:textSize="18sp"
         />

    <com.stuffrs.newappopay.views.MyTextView
        android:id="@+id/tvMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="+507 00000000"
        android:textAppearance="?textAppearanceBody1"
        android:textColor="@color/purple_500"
        android:textSize="18sp"

        />

    <com.stuffrs.newappopay.views.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Is this number ok, or doy you want\n to edit."
        android:textAppearance="?textAppearanceBody1"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.stuffrs.newappopay.views.MyTextViewBoldItalic
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@color/purple_500"
            android:textSize="18sp"

            android:theme="@style/MaterialButton" />

        <com.stuffrs.newappopay.views.MyTextViewBoldItalic
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:background="@null"
            android:text="Ok"
            android:textAllCaps="false"
            android:textColor="@color/purple_500"
            android:textSize="18sp"
            android:theme="@style/MaterialButton" />

    </RelativeLayout>


</LinearLayout>