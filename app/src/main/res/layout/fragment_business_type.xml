<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.BusinessTypeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Limited Liability Partnership"
                android:textColor="@color/colorPrimary" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Sole Proprietorship"
                android:textColor="@color/colorPrimary" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Partnership"
                android:textColor="@color/colorPrimary" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Public Company"
                android:textColor="@color/colorPrimary" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Private Company"
                android:textColor="@color/colorPrimary" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Other"
                android:textColor="@color/colorPrimary" />

        </RadioGroup>

        <TextView
            android:id="@+id/tvAgree"
            android:layout_width="180dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="20sp"

            android:background="@drawable/blue_rounded_bg"
            android:elevation="1.5dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Save"
            android:textColor="#fff"
            android:textSize="16sp" />


    </LinearLayout>

    <include layout="@layout/bootm_layout" />


</LinearLayout>